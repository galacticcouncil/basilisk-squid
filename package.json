{
  "name": "kusama-transfers",
  "private": true,
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "build": "rm -rf lib && tsc",
    "db:migrate": "npx squid-typeorm-migration apply",
    "processor:start": "node lib/processor.js",
    "query-node:start": "squid-graphql-server --subscriptions --max-response-size 10000"
  },
  "dependencies": {
    "@subsquid/archive-registry": "1.0.14",
    "@subsquid/graphql-server": "3.2.0",
    "@subsquid/ss58": "0.1.2",
    "@subsquid/substrate-processor": "1.9.1",
    "@subsquid/typeorm-migration": "0.1.2",
    "@subsquid/typeorm-store": "0.1.3",
    "dotenv": "^10.0.0",
    "git-repo-info": "^2.1.1",
    "pg": "8.8.0",
    "typeorm": "0.3.9",
    "yargs": "^17.6.0"
  },
  "devDependencies": {
    "@subsquid/substrate-metadata-explorer": "1.0.6",
    "@subsquid/substrate-typegen": "1.3.0",
    "@subsquid/typeorm-codegen": "0.2.1",
    "@types/node": "16.11.56",
    "@types/yargs": "^17.0.13",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "typescript": "4.8.2"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "none",
    "tabWidth": 2,
    "useTabs": false,
    "semi": false
  },
  "eslintConfig": {
    "extends": [
      "eslint-config-prettier"
    ],
    "overrides": [
      {
        "files": [
          "*"
        ],
        "rules": {
          "quotes": [
            "warn",
            "single",
            {
              "avoidEscape": true,
              "allowTemplateLiterals": true
            }
          ]
        }
      }
    ]
  }
}
